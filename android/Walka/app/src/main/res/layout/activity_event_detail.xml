<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="edu.upc.eetac.dsa.walka.EventDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/bar">
        <TextView
            android:id="@+id/Subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/Subject"
            android:paddingLeft="50dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            />
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton android:id="@+id/fabeditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="85dp"
        app:layout_anchor="@id/bar"
        app:layout_anchorGravity="bottom|end"
        android:src="@android:drawable/ic_menu_edit" />

    <android.support.design.widget.FloatingActionButton android:id="@+id/fabdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_anchor="@id/bar"
        app:layout_anchorGravity="bottom|end"
        android:src="@drawable/delete_event" />


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="129dp"
            app:paddingStart="80dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/clock"
                android:paddingTop="55dp"
                android:paddingLeft="30dp"/>
            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:text="Hoy"
                android:paddingLeft="90dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day"
                android:paddingTop="10dp"
                android:text="9:00 - 16:00"
                android:paddingLeft="90dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ubicacion"
                    android:paddingTop="130dp"
                    android:paddingLeft="30dp"/>
                <TextView
                    android:id="@+id/ubicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hour"
                    android:paddingTop="40dp"
                    android:text="Lugar"
                    android:paddingLeft="90dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingTop="190dp"
                    android:paddingLeft="40dp"/>
                <TextView
                    android:id="@+id/tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ubicacion"
                    android:paddingTop="40dp"
                    android:text="tag"
                    android:paddingLeft="90dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/description"
                    android:paddingTop="260dp"
                    android:paddingLeft="30dp"/>
                <TextView
                    android:id="@+id/notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tag"
                    android:paddingTop="40dp"
                    android:text="Este evento es para tal y tal"
                    android:paddingLeft="90dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/participantes"
                    android:paddingTop="360dp"
                    android:paddingLeft="30dp"/>
                <TextView
                    android:id="@+id/participantes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notes"
                    android:paddingTop="80dp"
                    android:text="marta, andreas y monti"
                    android:paddingLeft="90dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
        </ScrollView>



</android.support.design.widget.CoordinatorLayout>
